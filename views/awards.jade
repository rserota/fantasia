doctype 5
html
  head
    title Awards 
    link(rel='stylesheet', href='/stylesheets/fantastic.css')    
    link(rel='stylesheet', href='/stylesheets/awards.css')
    link(rel="shortcut icon", href="../media/images/favicon.ico")
  body
    include navbar

    h1.headtext <span class='raised'>My Awards</span>
    .awardsContainer
      ul.awardsList
        -for (var i = 0; i < myAwards.length; i++){
          li.awardsListItem.raised
            .awardName #{myAwards[i].name}

            hr.fuzzyHR
            p!= myAwards[i].body
        -}

    .feedback
      | This is your awards page!  Take a moment to appreciate all of your hard-earned
      | awards.  These aren't just cheap web-awards, in case you were wondering.  
      | If you give them a tap, you can hear that they are made of quality materials.
  script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
  script(src="http://cdnjs.cloudflare.com/ajax/libs/howler/1.1.11/howler.min.js")
  script(src="../javascripts/navbar.js")
  script(src="../javascripts/awards.js")